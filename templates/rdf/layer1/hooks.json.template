{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "_comment": "Claude Code hooks configuration. Copy to .claude/settings.local.json",
  "_update_trigger": "Modify when adding new file types or changing verification steps.",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read f; [[ $f == *.py ]] && ruff format \"$f\" && ruff check --fix \"$f\"; }"
          }
        ]
      }
    ],
    "PreCommit": [
      {
        "type": "command",
        "command": "uv run pytest -x -q && uv run ruff check ."
      }
    ]
  }
}
